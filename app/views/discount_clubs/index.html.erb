<h3>Clubes de Descuento</h3>
<div class="span8">
  <table class="table table-condensed">
    <thead>
    <tr>
      <th>Nombre</th>
      <th>Creado</th>
      <th></th>
      <th></th>
    </tr>
    </thead>
    <tbody>
    <% @clubs.each do |club| %>
        <tr>
          <td><%= club.name %></td>
          <td><%= club.created_at.to_date %></td>
          <td><%= link_to("Editar Club", edit_discount_club_path(club), class: 'btn btn-mini') %></td>
          <td><%= link_to("Eliminar Club", discount_club_path(club), data: { confirm: "¿Estás seguro?" }, method: :delete, class: 'btn btn-mini') %></td>
        </tr>
    <% end %>
    </tbody>
  </table>
</div>