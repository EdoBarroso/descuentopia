<div id="edit-<%= discount_club.id %>" class="modal" style="display: none;">
  <%= simple_form_for discount_club, :url => discount_club_path(discount_club), :html => {:method => :put, :class => 'form-horizontal' } do |f| %>
      <div class="modal-header">
        <a class="close" data-dismiss="modal">&#215;</a>
        <h3>Editar Club</h3>
      </div>
      <div class="modal-body">
        <%= f.input :name %>
      </div>
      <div class="modal-footer">
        <%= f.submit "Editar", :class => "btn" %>
        <a class="btn" data-dismiss="modal" href="#">Close</a>
      </div>
  <% end %>
</div>